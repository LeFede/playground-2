{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist", "node_modules"],

  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@/components": ["src/components/index.astro"],
      "@/layouts": ["src/layouts/index.astro"],
      "@/*": ["src/*"]
    }
  }
}
